void find()
	{

        Slot* p;
		Slot* s;
        Element* q;
		Element* r;
		linkedlistitem * list=NULL;
		linkedlistitem * start=new linkedlistitem();
		
		
		
        p = this->head;
       
        while(p != NULL)
        {
			q=p->head;
			s=p->next;
			
                while(q != NULL)
                {
				
                string str=q->d.value;
				
                int count =0;
                        if(str.size() > 2 && str != "and" && str != "has" && str != "its"
&& str != "but" && str != "for" && str != "how" && str != "all" && str
!= "are" && str != "was" && str != "the" && str != "who")
						{
							
							while( s != NULL)
							{
								
								r=s->head;
                                while(r != NULL)
                                {
								
                                string str1 = r->d.value;
								
									if(str1.size() > 2 && str != "and" && str != "has" && str != "its"
&& str != "but" && str != "for" && str != "how" && str != "all" && str
!= "are" && str != "was" && str != "the" && str != "who" && str!="will")
									{
									
                                        if(str.size() == str1.size())
                                        {
									
										
                                        if(q->d.value == r->d.value)
                                        {
											
                                                count= count+1;
												
                                        }
                                        
										}
								   }
                                r=r->next;
								}
								s=s->next;
							}
						}
					
					if(count>2)
					{
							if(list == NULL)
							{
							
							list = new linkedlistitem(q->d.value);
							start->next = list;
							list->next=NULL;
						
							}
							else
							{
								int eleexists=0;
								linkedlistitem *list1=start;
								while(list1!= NULL)
								{
									
									if(list1->item == q->d.value)
									{
									eleexists=1;
									}
									
									list1=list1->next;
									
								}
								if(eleexists==0)
								{
									linkedlistitem *list2=start;
									
									while(list2->next!=NULL)
									{
									
									
									list2=list2->next;
									}
									
									 linkedlistitem *x = new linkedlistitem(q->d.value);
								
										list2->next = x;
										
								
								}
							
							}
							
					}
					q=q->next;
					s=p->next;
					}
				p=p->next;
				}
				linkedlistitem* curr = start;
				while(curr != NULL)
				{
				cout << curr->item <<"\n";
				curr = curr->next;
				}
	
}

int *  search(string str1,string str2)
{
 
		Slot* p;
        Element* q;
		Element* z;
		p = this->head;
		int count1=0;
		int count2 = 0;
		int count3= 0;
		static int count[3];
		while(p != NULL)//slot
		{
			q=p->head;
			while(q != NULL) //element
			{
				
				if(str2 == q->d.value)
				{
					count2++;
					
				}
				if(str1 == q->d.value )
                 {
					count1++;
					
                     z=p->head;
                     while(z != NULL)
                     {
                        if(str2 == z->d.value)
						count3++;
						z=z->next;
                     }
                 }
				q=q->next;
			}
			p=p->next;
		}
		count[0] = count1;
		count[1] = count2;
		count[2] = count3;
		return count;
}
 //destructor
   ~HashMap()
   {
       while (this->head != NULL)
           this->remove(this->head);
   }
};

